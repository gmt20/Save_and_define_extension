{
  "manifest_version": 2,

  "name": "Save",
  "description": "Extension to save selected text",
  "version": "1.0",
  "icons": {
 
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "background": {
    "scripts": ["eventPage.js","popup.js","dict.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "permissions": [     
          "contextMenus",
          "storage"
        ]
}
